
<form>
  <div>
    Search by Airport (ICAO code): <input name="airport_code" />
  </div>
  <div>
    Or zipcode: <input name="zipcode" />
  </div>
  <input type="submit" value="search">
</form>
<h1>Listing Buying Groups</h1>

<table>
  <thead>
    <tr>
      <th>Airport</th>
      <th>Aircraft type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buying_groups.each do |buying_group| %>
      <tr>
        <td><%= buying_group.airport.description %></td>
        <td><%= buying_group.aircraft_type %></td>
        <td><%= link_to 'Show', buying_group %></td>
        <td><%= link_to 'Edit', edit_buying_group_path(buying_group) %></td>
        <td><%= link_to 'Destroy', buying_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

